<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Tiempo.MVVM.Views.PaginaPrincipal"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             Title="PaginaPrincipal">

    <Grid RowDefinitions=".1*,.8*,.1*">
        <SearchBar x:Name="nombreZona" Grid.Row="0" SearchCommand="{Binding buscarCommand}" SearchCommandParameter="{Binding Source={x:Reference nombreZona},Path=Text}"/>
        <Grid Grid.Row="1">
            <VerticalStackLayout>
                <Label Text="{Binding NombreZona}" HorizontalOptions="Center" FontSize="Large"/>
                <skia:SKLottieView RepeatCount="-1" Source=""/>
            </VerticalStackLayout>
        </Grid>

    </Grid>
  
    
    
</ContentPage>